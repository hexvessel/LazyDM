<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragons"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Sessions_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_castle_24"
        android:drawableRight="@drawable/baseline_castle_24"
        android:paddingHorizontal="50dp"
        android:paddingVertical="5dp"
        android:layout_margin="5dp"
        android:fontFamily="@font/olondona"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Sessions_Recycler"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:text="SESSIONS"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Sessions_Recycler"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sessions_Title"
        app:layout_constraintBottom_toTopOf="@+id/Sessions_edittext"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <EditText
        android:id="@+id/Sessions_edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sessions_Recycler"
        app:layout_constraintBottom_toTopOf="@+id/Sessions_Button"
        android:hint="Session Name"
        android:textSize="25dp"
        android:fontFamily="@font/oldlondon"
        android:textColorHint="@color/white"
        android:background="@drawable/title_background"
        android:textColor="@color/red"
        android:gravity="center"
        android:maxLength="30"
        android:layout_marginHorizontal="10dp"
        android:inputType="text"
        android:imeOptions="actionDone"/>
    <Button
        android:id="@+id/Sessions_Button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="@color/white"
        android:theme="@style/Theme.AppCompat.DayNight"
        app:layout_constraintLeft_toLeftOf="@id/Sessions_edittext"
        app:layout_constraintRight_toLeftOf="@id/sessions_rem_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sessions_edittext"
        android:text="Add Sesh"/>
    <Button
        android:id="@+id/sessions_rem_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:theme="@style/Theme.AppCompat.DayNight"
        android:layout_marginHorizontal="5dp"
        android:text="Rem Sesh"
        app:layout_constraintRight_toRightOf="@+id/Sessions_edittext"
        app:layout_constraintLeft_toRightOf="@+id/Sessions_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sessions_edittext"/>

</androidx.constraintlayout.widget.ConstraintLayout>